{
    "compilerOptions": {
     "target": "ES2020",
      // "module": "ESNext",
      "module": "ES2020",
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["node"],
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }